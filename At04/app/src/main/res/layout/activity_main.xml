<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        tools:ignore="MissingConstraints">
        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/img_2"
            android:contentDescription="Foto Perfil"
        />
        <TextView
            android:id="@+id/nameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome Usuario"
            android:textSize="24sp"
            android:layout_gravity="center_horizontal"
            android:paddingTop="8dp"/>
        <TextView
            android:id="@+id/descriptionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descrição do Usuario"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal"
            android:paddingTop="4dp"/>
        <TextView
            android:id="@+id/currentJobText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Emprego Atual: Desenvolvedor Full-Stack"
            android:textSize="16sp"
            android:paddingTop="8dp"/>
        <LinearLayout
            android:id="@+id/experienceLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Experiencias Anteriores"
                android:textSize="18sp"
                android:paddingBottom="8dp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/coffeBebidoHojeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cafés Tomados Hoje: "
            android:textSize="16sp"
            android:paddingBottom="8dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>